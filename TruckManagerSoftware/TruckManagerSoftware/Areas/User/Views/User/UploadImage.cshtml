@model UploadUserImageViewModel

@{
    ViewBag.Title = "Upload User Image";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="user" asp-controller="User" asp-action="UploadImage" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label-add-edit fw-bold">Upload User Image</label>
                <input asp-for="@Model.Image" class="form-control" type="file" name="Image" />
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Upload" />
            </div>
        </form>
    </div>
</div>