@model ICollection<TrailerInfoViewModel>

@{
    ViewBag.Title = "All Trailers";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (TempData["Message"] != null)
{
    <div id="alert" class="alert alert-success" role="alert">@TempData["Message"]</div>
}

@if (TempData["ExceptionMessage"] != null)
{
    <div id="alert" class="alert alert-danger" role="alert">@TempData["ExceptionMessage"]</div>
}

<form asp-controller="Trailer" asp-action="Add" method="get" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <input class="btn btn-primary" type="submit" value="Add" />
    </div>
</form>

<div class="container">
    <div class="row">
        @foreach (var trailer in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <div>
                            <span class="fw-bold">Title: </span> @trailer.Title
                        </div>

                        <div>
                            <span class="fw-bold">Series: </span> @trailer.Series
                        </div>

                        <div>
                            <span class="fw-bold">Trailer Type: </span> @trailer.TrailerType
                        </div>

                        <div>
                            <span class="fw-bold">Body Type: </span> @trailer.BodyType
                        </div>

                        <div>
                            <span class="fw-bold">Tare Weight: </span> @trailer.TareWeight Kilograms
                        </div>

                        <div>
                            <span class="fw-bold">Axle Count: </span> @trailer.AxleCount
                        </div>

                        <div>
                            <span class="fw-bold">Total Length: </span> @trailer.TotalLength Meters
                        </div>

                        <div>
                            <span class="fw-bold">Cargo Types: </span> @trailer.CargoTypes
                        </div>

                        @{
                            ViewBag.Image = $"{trailer.Image}.jpg";
                        }

                        <img src="~/Images/Trailers/@ViewBag.Image" class="card-img-top" alt="image">
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <form asp-controller="Trailer" asp-action="Edit" asp-route-id="@trailer.Id" method="get" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input class="btn btn-warning" type="submit" value="Edit" />
                                    </div>
                                </form>
                            </div>

                            <div class="col">
                                <form asp-controller="Trailer" asp-action="Remove" asp-route-id="@trailer.Id" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input class="btn btn-danger" type="submit" value="Delete" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        window.setTimeout(function () {
            $("#alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);
    </script>
}