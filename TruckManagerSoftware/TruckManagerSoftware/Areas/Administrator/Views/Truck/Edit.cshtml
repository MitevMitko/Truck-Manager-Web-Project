@model EditTruckViewModel

@{
    ViewBag.Title = "Edit Truck";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<p>@Html.ValidationSummary(false)</p>

@if (TempData["ExceptionMessage"] != null)
{
    <div id="alert" class="alert alert-danger" role="alert">@TempData["ExceptionMessage"]</div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Administrator" asp-controller="Truck" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label-add-edit fw-bold">Brand</label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Series" class="form-label-add-edit fw-bold">Series</label>
                <input asp-for="@Model.Series" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Series" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.DrivenDistance" class="form-label-add-edit fw-bold">Driven Distance</label>
                <div class="input-group">
                    <input asp-for="@Model.DrivenDistance" class="form-control" aria-required="true" />
                    <div class="input-group-append">
                        <span class="input-group-text">Kilometer</span>
                    </div>
                </div>
                <span asp-validation-for="@Model.DrivenDistance" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.GarageId" class="form-label-add-edit fw-bold">Garage (Country | City | Size)</label>
                <select asp-for="@Model.GarageId" class="form-control" aria-required="true">
                    @foreach (var garage in Model.Garages)
                    {
                        <option value="@garage.Id">@garage.Country | @garage.City | @garage.Size</option>
                    }
                </select>
                <span asp-validation-for="@Model.GarageId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.EngineId" class="form-label-add-edit fw-bold">Engine</label>
                <select asp-for="@Model.EngineId" class="form-control" aria-required="true">
                    @foreach (var engine in Model.Engines)
                    {
                        <option value="@engine.Id">@engine.Title</option>
                    }
                </select>
                <span asp-validation-for="@Model.EngineId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.TransmissionId" class="form-label-add-edit fw-bold">Transmission</label>
                <select asp-for="@Model.TransmissionId" class="form-control" aria-required="true">
                    @foreach (var transmission in Model.Transmissions)
                    {
                        <option value="@transmission.Id">@transmission.Title</option>
                    }
                </select>
                <span asp-validation-for="@Model.TransmissionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Image" class="form-label-add-edit fw-bold">Upload Truck Image</label>
                <input asp-for="@Model.Image" class="form-control" type="file" name="Image" />
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        window.setTimeout(function () {
            $("#alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);
    </script>
}