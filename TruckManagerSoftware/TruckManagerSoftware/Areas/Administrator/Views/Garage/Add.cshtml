@model AddGarageViewModel

@{
    ViewBag.Title = "Create New Garage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<p>@Html.ValidationSummary(false)</p>

@if (TempData["ExceptionMessage"] != null)
{
    <div id="alert" class="alert alert-danger" role="alert">@TempData["ExceptionMessage"]</div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Administrator" asp-controller="Garage" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Country" class="form-label-add-edit fw-bold">Country</label>
                <input asp-for="@Model.Country" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.City" class="form-label-add-edit fw-bold">City</label>
                <input asp-for="@Model.City" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Size" class="form-label-add-edit fw-bold">Size</label>
                <select asp-for="@Model.Size" class="form-control">
                    @foreach (var option in Html.GetEnumSelectList<GarageSizeEnum>())
                    {
                        <option value="@option.Text">@option.Text</option>
                    }
                </select>
                <span asp-validation-for="@Model.Size" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        window.setTimeout(function () {
            $("#alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);
    </script>
}